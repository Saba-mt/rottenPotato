<% sorted_column = params[:sort] || 'title' %>
<% sorted_direction = params[:direction] || 'asc' %>

<table>
  <thead>
    <tr>
      <th class="<%= 'sorted-' + sorted_direction if sorted_column == 'title' %>">
        <%= link_to 'Title', movies_path(sort: 'title', direction: toggle_direction('title', params[:direction])) %>
      </th>
      <th class="<%= 'sorted-' + sorted_direction if sorted_column == 'rating' %>">
        <%= link_to 'Rating', movies_path(sort: 'rating', direction: toggle_direction('rating', params[:direction])) %>
      </th>
      <th class="<%= 'sorted-' + sorted_direction if sorted_column == 'release_date' %>">
        <%= link_to 'Release Date', movies_path(sort: 'release_date', direction: toggle_direction('release_date', params[:direction])) %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">Total Movies: <%= @movies.count %></td>
    </tr>
  </tfoot>
</table>

