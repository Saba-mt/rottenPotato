<p style="color: green;"><%= notice %></p>

<h1 style="font-family: Arial, sans-serif; color: #2c3e50;"><%= @movie.title %></h1>

<table style="width: 50%; border-collapse: collapse;">
  <tr>
    <th style="text-align: left; padding: 10px;">Rating:</th>
    <td style="padding: 10px;"><%= @movie.rating %></td>
  </tr>
  <tr>
    <th style="text-align: left; padding: 10px;">Release Date:</th>
    <td style="padding: 10px;"><%= @movie.release_date %></td>
  </tr>
  <tr>
    <th style="text-align: left; padding: 10px;">Description:</th>
    <td style="padding: 10px;"><%= @movie.description %></td>
  </tr>
</table>

<br>

<div>
  <%= link_to "Edit this movie", edit_movie_path(@movie), class: "custom-button" %> |
  <%= link_to "Back to movies", movies_path, class: "custom-button" %>
  
  <%= button_to "Destroy this movie", @movie, method: :delete, data: { confirm: "Are you sure you want to delete this movie?" }, class: "custom-button-danger" %>
</div>
